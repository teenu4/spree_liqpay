<script>
  document.addEventListener("turbolinks:load", function () {
    $(function () {
      setInterval(function () {
        $.getJSON('<%= liqpay_status_order_checkout_url(@order, format: :json) %>', function (data) {
          if (data.completed)
            location.reload();
          }
        )
      }, 500)
    });
  });
</script>
